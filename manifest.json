{
  "manifest_version": 3,
  "name": "Language Content Accessor",
  "description": "Allows users to set a preferred language for specific websites by modifying the Accept-Language header.",
  "version": "1.1.1",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "Language Content Accessor"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}